<% if !flash[:notice].blank? %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
<% end %>

<h1>section#index</h1>
<p>Find me in app/views/section/index.html.erb</p>
 
<div class= "section index">
	<h2>section</h2>
	
	<%= link_to("Add New section", {:action => 'new'}, class: 'action new') %>
	
	<table class="listing" summary="section list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Page ID</th>
			<th>section</th>
			<th>Content Type</th>
			<th>Visible</th>
			<th>Pages</th>
			<th>Actions</th>
		</tr>
		<% @section.each do |section|%>
		<tr>
			<td><%= section.position %></td>
			<td><%= section.name %></td>
			<td class="center"> <%= section.visible ? 'Yes':'No' %> </td>
			<td class="actions">
				<%= link_to("Show", {:action => 'show', :id => section.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => section.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => section.id}, :class => 'action delete') %>
			</td>
		</tr>
		
		<% end %>
	</table>
</div>
